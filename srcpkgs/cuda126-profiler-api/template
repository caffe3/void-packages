# Template file for cuda126-profiler-api
_pkgname=cuda-profiler-api-12-6
_version=12.6.77-1
_arch=amd64
pkgname=cuda126-profiler-api
version=12.6.77
revision=1
archs="x86_64*"
build_style=fetch
hostmakedepends="dpkg binutils xz"
depends="cuda126-toolkit-config-common"
short_desc="CUDA Profiler API headers"
maintainer="Tai Chi Minh Ralph Eastwood <caffe@disroot.org>"
license="custom:NVIDIA Proprietary"
homepage="https://developer.nvidia.com/cuda-toolkit"
distfiles="https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2404/x86_64/./${_pkgname}_${_version}_${_arch}.deb"
checksum=9bcf4a8aa628112d558b274241907f301cb2e4964ba087c95e61bc35b6f48d07
repository=nonfree
nopie=yes
nostrip=yes

do_extract() {
  ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_pkgname}_${_version}_${_arch}.deb
}

do_install() {
  bsdtar -C ${DESTDIR} -s '#/usr/local#/opt#' -xf data.tar.*
  rm -f ${DESTDIR}/opt/cuda-12.6/include
  vlicense ${DESTDIR}/usr/share/doc/cuda-profiler-api-12-6/copyright LICENSE
  rm ${DESTDIR}/usr/share/doc/cuda-profiler-api-12-6/copyright
  rm -f ${DESTDIR}/usr/share/doc/${_pkgname}/changelog.Debian.gz
}
