_arch=amd64
pkgname=cuda126-cuxxfilt
version=12.6.77
revision=1
archs="x86_64"
build_style=fetch
hostmakedepends="dpkg binutils xz"
short_desc="cu++filt decodes (demangles) low-level identifiers that have been mangled by CUDA C++ into user readable names"
maintainer="Tai Chi Minh Ralph Eastwood <caffe@disroot.org>"
license="custom:NVIDIA Proprietary"
homepage="https://developer.nvidia.com/cuda-toolkit"
distfiles="https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2404/x86_64/./${_pkgname}_${_version}_${_arch}.deb"
checksum=d2b3d821f9fdeb844456a456fc117c203de769d58c190503591f9441642573b3
repository=nonfree
nopie=yes
nostrip=yes

do_extract() {
  ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_pkgname}_${_version}_${_arch}.deb
}

do_install() {
  bsdtar -C ${DESTDIR} -s '#/usr/local#/opt#' -xf data.tar.*
  vlicense ${DESTDIR}/usr/share/doc/cuda-cuxxfilt-12-6/copyright LICENSE
  rm ${DESTDIR}/usr/share/doc/cuda-cuxxfilt-12-6/copyright
  rm -f ${DESTDIR}/usr/share/doc/${_pkgname}/changelog.Debian.gz
}
