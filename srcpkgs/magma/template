# Template file for 'magma'
_cudaver=12.6
pkgname=magma
version=2.8.0
revision=1
archs="x86_64*"
build_style=gnu-makefile
make_install_args="prefix=/usr"
hostmakedepends="cuda${_cudaver/./}-compiler gcc-fortran python perl"
makedepends="libgomp-devel openblas-devel"
makedepends+=" cuda${_cudaver/./}-crt"
makedepends+=" cuda${_cudaver/./}-cudart-devel"
makedepends+=" libcublas${_cudaver/./}-devel"
makedepends+=" libcusparse${_cudaver/./}-devel"
makedepends+=" cuda${_cudaver/./}-profiler-api"
short_desc="Matrix algebra on GPU and multi-core architectures"
maintainer="Tai Chi Minh Ralph Eastwood <caffe@disroot.org>"
license="BSD-3-Clause"
homepage="https://icl.utk.edu/magma/"
distfiles="https://github.com/icl-utk-edu/magma/archive/refs/tags/v${version}.tar.gz"
checksum=ceec5c4465619be650c4581cb3b3fca152f16256da7afc917e2ddc8e858d9e7f

pre_configure() {
	cp ${FILESDIR}/make.inc ${wrksrc}/.
	make generate
}

magma-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
	}
}
