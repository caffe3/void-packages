# Template file for 'magma'
_cudaver=12.6
_cudaarchs="80 86 89 90 90a"
pkgname=magma
version=2.8.0
revision=1
archs="x86_64*"
build_style=cmake
configure_args+=" -DCMAKE_BUILD_TYPE=Release"
configure_args+=" -DMAGMA_ENABLE_CUDA=ON"
configure_args+=" -DCUDAToolkit_ROOT=/opt/cuda-${_cudaver}"
configure_args+=" -DCMAKE_CUDA_COMPILER=/opt/cuda-${_cudaver}/bin/nvcc"
configure_args+=" -DCMAKE_CUDA_ARCHITECTURES=${_cudaarchs// /-real;}"
hostmakedepends="cuda${_cudaver/./}-compiler gcc-fortran python perl"
makedepends="libgomp-devel openblas-devel"
makedepends+=" cuda${_cudaver/./}-crt cuda${_cudaver/./}-cudart-devel libcublas${_cudaver/./}-devel libcusparse${_cudaver/./}-devel cuda${_cudaver/./}-profiler-api"
short_desc="Matrix algebra on GPU and multi-core architectures"
maintainer="Tai Chi Minh Ralph Eastwood <caffe@disroot.org>"
license="BSD-3-Clause"
homepage="https://icl.utk.edu/magma/"
distfiles="https://github.com/icl-utk-edu/magma/archive/refs/tags/v${version}.tar.gz"
checksum=ceec5c4465619be650c4581cb3b3fca152f16256da7afc917e2ddc8e858d9e7f

if [ "$CROSS_BUILD" ]; then
	export cmake_crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
fi

pre_configure() {
	printf 'BACKEND = cuda\nFORT = gfortran\nGPU_TARGET = sm_%s\n' "${_cudaarchs// /sm_}" > make.inc
	make generate
}

do_configure() {
	cmake -B build-shared -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_SHARED_LIBS=ON \
		$configure_args \
		$cmake_crossopts


	cmake -B build-static -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_SHARED_LIBS=OFF \
		$configure_args \
		$cmake_crossopts
}

do_build() {
	ninja -C build-shared
	ninja -C build-static
}

do_install() {
	DESTDIR=$DESTDIR ninja install -C build-static
	DESTDIR=$DESTDIR ninja install -C build-shared
}

magma-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
	}
}
