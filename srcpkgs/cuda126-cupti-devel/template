# Template file for cuda126-cupti-devel
_pkgname=cuda-cupti-dev-12-6
_version=12.6.80-1
_arch=amd64
pkgname=cuda126-cupti-devel
version=12.6.80
revision=1
archs="x86_64*"
build_style=fetch
hostmakedepends="dpkg binutils xz"
depends="cuda126-toolkit-config-common cuda126-cupti>=12.6.80"
short_desc="Provides a set of API's to enable third party tools to write GPU profiling tools"
maintainer="Tai Chi Minh Ralph Eastwood <caffe@disroot.org>"
license="custom:NVIDIA Proprietary"
homepage="https://developer.nvidia.com/cuda-toolkit"
distfiles="https://developer.download.nvidia.com/compute/cuda/repos/ubuntu2404/x86_64/./${_pkgname}_${_version}_${_arch}.deb"
checksum=eef137b596fcf9644d9da94e3b73cfaf31eb5d106d7ea258a4d670fea5319b7f
repository=nonfree
nopie=yes
nostrip=yes

do_extract() {
  ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_pkgname}_${_version}_${_arch}.deb
}

do_install() {
  bsdtar -C ${DESTDIR} -s '#/usr/local#/opt#' -xf data.tar.*
  rm -f ${DESTDIR}/opt/cuda-12.6/include
  vlicense ${DESTDIR}/usr/share/doc/cuda-cupti-dev-12-6/copyright LICENSE
  rm ${DESTDIR}/usr/share/doc/cuda-cupti-dev-12-6/copyright
  rm -f ${DESTDIR}/usr/share/doc/${_pkgname}/changelog.Debian.gz
}
